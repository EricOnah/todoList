                                <div class="list-items">
                                    <div class="custom-checkbox">
                                        <input type="checkbox" class="item-checkbox">
                                        <span class="label-text">
                                            <%= item.title %>
                                        </span>
                                        <button id="deleteBtn" name="checkbox" class="deleteBtn" value=<%=item.id
                                            %>>Delete</button>
                                    </div>
                                </div>
                            </form>
                        </li>

                        <% }) %>

