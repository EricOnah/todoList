<%- include('header'); -%>

    <body>
        <div class="form">

            <div class="form-head">
                <h1 class="form-head_title">
                    <%= kindOfDay %>
                </h1>
            </div>
            <div class="form-body">
                <ul class="form-body_list">

                    <% items.forEach(function(item){ %>

